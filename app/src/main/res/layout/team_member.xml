<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="9dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        app:cardCornerRadius="15dp"
        android:layout_margin="9dp"
        android:elevation="15dp"
        android:outlineSpotShadowColor="#A198AE"
        android:layout_height="250dp">
        <RelativeLayout
            android:background="@drawable/splaback"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/memberimage"
                android:src="@drawable/user"
                />
            <TextView
                android:id="@+id/membername"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/memberimage"
                android:layout_marginTop="29dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#0E0E0E"
                android:text="mohamed osama"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/memberdetail"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/membername"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#3E3737"
                android:text="IOS DEveloper"
                android:gravity="center_horizontal" />







        </RelativeLayout>







    </androidx.cardview.widget.CardView>

</LinearLayout>