<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splaback"
    tools:context=".LoginFrag">

    <TextView
        android:elevation="20dp"
        android:id="@+id/loginword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In.."
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#F5F6F6"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        />
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/loginword"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="@drawable/round_back"
        android:src="@drawable/l"

        />
    <EditText
        android:inputType="textEmailAddress"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_login"
        android:id="@+id/Email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginword"
        android:layout_marginTop="150dp"
        android:textColorHint="#673AB7"
        android:hint="Enter Your Email Pleas"
        android:drawableLeft="@drawable/email"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <EditText
        android:padding="10dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_login"
        android:id="@+id/pass_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email_login"
        android:layout_marginTop="30dp"
        android:hint="Enter Your Password Pleas"
        android:drawableLeft="@drawable/pass"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textAlignment="center"
        android:textColorHint="#673AB7"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/loginbutton"
        android:elevation="15dp"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass_login"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:background="#381D68"
        android:padding="14dp"
        android:text="Login"
        android:textSize="20dp"
        android:textColor="#D3DEE3"
        android:textStyle="bold" />


</RelativeLayout>