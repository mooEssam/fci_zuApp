<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    android:elevation="15dp"
    android:layout_width="210dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/coursedefault"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/courseimage"
            />
        <TextView
            android:id="@+id/coursename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseimage"
            android:text="computer vision"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="#040404"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
        <TextView
            android:textDirection="ltr"
            android:layout_margin="6dp"
            android:id="@+id/coursesummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coursename"
            android:text=" must explain to you how all this a mistaken idea of denouncing great explorer of the rut the is lder of human happiness"
            android:textSize="18dp"
            android:textColor="#040404"

            android:gravity="center_horizontal"
            tools:ignore="RtlCompat" />
        <Button
            android:padding="5dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/readmorebutton"
            android:layout_below="@id/coursesummary"
            android:textColor="#F9F8FA"
            android:textStyle="bold"
            android:text="Read more.."
            android:background="#45277A"

            />







    </RelativeLayout>
    
    
    
    
    
</androidx.cardview.widget.CardView>
</RelativeLayout>